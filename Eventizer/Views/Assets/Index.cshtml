@model Eventizer.Models.Current
@{
    ViewBag.Title = "All Assets";

    ViewBag.isAddSubtask = false;
    ViewBag.isAddTask = false;
    ViewBag.isAddAsset= true;

    ViewBag.isHighlightedAsset= true;
}

@Html.Partial("_Navigation", Model.Employee)
<section id="controls">
    <div class="container-fluid">
        <div class="col-md-8">
            <br />
            <div class="panel panel-default">
                <div class="panel-heading">All Assets</div>
                @if (ViewBag.Assets.Count > 0)
                {
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <td style="text-align:center">#</td>
                                <td><strong>Asset Name</strong></td>
                                <td><strong>Asset Type</strong></td>
                                <td><strong>Created by</strong></td>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 1;}
                            @foreach (Eventizer.Models.Asset E in ViewBag.Assets)
                            {
                                <tr style="overflow: hidden;">
                                    <td style="text-align:center">@i</td>
                                    <td>@E.Name</td>
                                    <td>@E.Type</td>
                                    <td>@E.CreatedBy.Name</td>
                                </tr>
                                i++;
                            }

                        </tbody>
                    </table>
                }
                else
                {
                    <div class="panel-body">
                        <div class="alert alert-danger" style="text-align: center; margin-bottom: 0;">
                            <p style="padding-bottom: 10px;">Looks like no assets have been added yet</p>

                            <button class="btn btn-danger btn-sm">Add Asset</button>
                        </div>

                    </div>
                }
            </div>
        </div>
        <div class="col-md-4">
            <br />
            @Html.Partial("_RightPanel", null)
        </div>
    </div>
</section>

@Html.Partial("_BottomScripts", null)
